                      },
                      "minVersion": {
                        "type": "string",
                        "title": "Min version",
                        "description": "The mininum version."
                      },
                      "maxVersion": {
                        "type": "string",
                        "title": "Max version",
                        "description": "The maximum version."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
